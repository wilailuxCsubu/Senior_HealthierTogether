<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubu.healthiertogether.Home_assessment9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="แบบประเมินผู้ป่วยตามหลัก"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INHOMESSS"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10/10"
            android:textColor="#919090"
            android:textSize="20dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="การกลั้นปัสวะในระยะ 1 สัปดาห์  ที่ผ่านมา"
                    android:textColor="#000"
                    android:textSize="25dp" />

                <RadioGroup
                    android:id="@+id/gch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                  >

                    <RadioButton
                        android:id="@+id/ch0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กลั้นไม่ได้ หรือต้องการสวนปัสวะเสมอ"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/ch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กลั้นไม่ได้เป็นครั้งคราว น้อยกว่า 1 ครั้งต่อสัปดาห์"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/ch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กลั้นได้ปกติ"
                        android:layout_marginTop="6dp"
                        android:textSize="23dp"/>



                </RadioGroup>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="135dp"
                        android:background="@drawable/i011"/>


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="ยืนยัน"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/register_button"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            />


    </LinearLayout>

</LinearLayout>
