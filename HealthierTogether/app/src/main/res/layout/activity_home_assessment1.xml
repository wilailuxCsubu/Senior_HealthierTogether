<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubu.healthiertogether.Home_assessment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="แบบประเมินผู้ป่วยตามหลัก"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INHOMESSS"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2/10"
            android:layout_marginBottom="15dp"
            android:textColor="#919090"
            android:textSize="23dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp"
                android:paddingTop="22dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="การล้างหน้า แปรงฟัน หวีผม โกนหนวด ใน 2วันที่ผันมา"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="25dp" />

                <RadioGroup
                    android:id="@+id/gch"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="30dp">

                    <RadioButton
                        android:id="@+id/ch0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ต้องการความช่วยเหลือ"
                        android:layout_margin="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="23dp" />

                    <RadioButton
                        android:id="@+id/ch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ทำเองได้"
                        android:layout_margin="5dp"
                        android:textSize="23dp" />



                </RadioGroup>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="ยืนยัน"
            android:textSize="22dp"
            android:textStyle="bold"
            android:background="@drawable/register_button"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="36dp"
            />


    </LinearLayout>

</LinearLayout>
